      "args": {             "commands": ["editor.action.addSelectionToNextFindMatch", "actions.find", "workbench.action.focusActiveEditorGroup"] } },
    { "key": "ctrl+g",       "command": "runCommands",
                                "when": "isWindows && (editorFocus || editorIsOpen) && !findWidgetVisible &&  editorHasSelection",
      "args": {             "commands": ["actions.find", "workbench.action.focusActiveEditorGroup"] } },
    { "key": "ctrl+shift+g", "command": "runCommands",
